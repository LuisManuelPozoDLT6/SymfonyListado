{% extends('base.html.twig') %}

{% block title %}
    Employees</title>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %} 
    <h1 class="text-center" style="margin-top: 10px;"><i class="fas fa-users"></i>Employees</h1>
    <div class="container position-relative">
        <div class="row ">
            <div class="col-11 mx-auto d-block">
                <hr>
                <div class="card " style="margin-bottom: 10px;">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre completo</th>
                                    <th>Extensi√≥n</th>
                                    <th class="text-center">Email</th>
                                    <th>Trabajo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for employee in lista %}
                                    <tr>
                                        <td>{{ employee.employeenumber }}</td>
                                        <td>{{ employee.firstname }} {{ employee.lastname }}</td>
                                        <td>{{ employee.extension }}</td>
                                        <td>{{ employee.email }}</td>
                                        <td>{{ employee.jobtitle }}</td>
                                        <td>
                                            <button class="btn btn-outline-danger text-center">Eliminar</button>
                                            <button class="btn btn-outline-warning text-center">Modificar</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}