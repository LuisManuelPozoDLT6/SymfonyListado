{% extends('base.html.twig') %}

{% block title %}
    Customers
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %} 
    <h1 class="text-center" style="margin-top: 10px;"><i class="fas fa-users"></i> Customers</h1>
    <div class="container position-relative">
        <div class="row ">
            <div class="col-11 mx-auto d-block">
                <hr>
                <div class="card " style="margin-bottom: 10px;">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Teléfono</th>
                                    <th>Contácto</th>
                                    <th class="text-center">Dirección</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for customers in lista %}
                                    <tr>
                                        <td>{{ customers.customernumber }}</td>
                                        <td>{{ customers.customername }}</td>
                                        <td>{{ customers.phone }}</td>
                                        <td>{{ customers.contactfirstname }} {{ customers.contactlastname }}</td>
                                        <td>{{ customers.addressline1 }}, {{ customers.addressline2 }}, {{ customers.postalcode }}, {{ customers.city }}, {{ customers.state }}, {{ customers.country }}</td>
                                        <td>
                                            <button class="btn btn-outline-danger text-center">Eliminar</button>
                                            <button class="btn btn-outline-warning text-center">Modificar</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}