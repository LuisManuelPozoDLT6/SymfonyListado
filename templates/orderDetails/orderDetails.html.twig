{% extends('base.html.twig') %}

{% block title %}
    order details</title>
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %} 
    <h1 class="text-center" style="margin-top: 10px;"><i class="fas fa-users"></i>Order details</h1>
    <div class="container position-relative">
        <div class="row ">
            <div class="col-11 mx-auto d-block">
                <hr>
                <div class="card " style="margin-bottom: 10px;">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Número de orden</th>
                                    <th>Código del producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Linea</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for orderDetails in lista %}
                                    <tr>
                                        <td>{{ orderDetails.ordernumber }}</td>
                                        <td>{{ orderDetails.productcode }}</td>
                                        <td>{{ orderDetails.quantityordered }}</td>
                                        <td>{{ orderDetails.priceeach }} </td>
                                        <td>{{ orderDetails.orderlinenumber }}</td>
                                        <td>
                                            <button class="btn btn-outline-danger text-center">Eliminar</button>
                                            <button class="btn btn-outline-warning text-center">Modificar</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}